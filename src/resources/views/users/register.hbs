    <script>
document.addEventListener('DOMContentLoaded', function () {
    const registrationForm = document.querySelector('form');
    registrationForm.addEventListener('submit', function (e) {
        e.preventDefault(); // Ngăn chặn việc gửi form mặc định

        // Tạo một object mới có chứa dữ liệu form
        const formData = new FormData(this);
        const data = {
            email: formData.get('email'),
            password: formData.get('password')
        };

        // Gửi dữ liệu đến server sử dụng fetch API
        fetch('/user/register', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify(data)
        })
        .then(response => response.json()) 
        .then(data => {
            if (data.status === 'success') { // Kiểm tra nếu đăng ký thành công
                // Hiển thị thông báo toast
                Toastify({
                    text: "Register Successfully",
                    duration: 2000, 
                    close: true,
                    gravity: "top", 
                    position: 'right',
                    backgroundColor: "linear-gradient(to right, #00b09b, #96c93d)",
                    stopOnFocus: true, // Ngưng thời gian đếm ngược khi toast được focus

                }).showToast();

                setTimeout(() => {
                    window.location.href = '/user/user-login';
                }, 2000);
            } else {
                // Xử lý lỗi hoặc hiển thị thông báo lỗi
                {{!-- console.error(data.message); --}}
                Toastify({
            text: data.message, // Hiển thị thông báo lỗi từ server
            duration: 3000,
            close: true,
            gravity: "top", 
            position: 'right',
            backgroundColor: "linear-gradient(to right, #ff5f6d, #ffc371)", // Màu sắc nền cho toast lỗi
            stopOnFocus: true, // Ngưng thời gian đếm ngược khi toast được focus
        }).showToast();
            }
        })
        .catch((error) => {
           

            console.error('Error:', error);
    // Có thể thêm Toastify tại đây để thông báo lỗi mạng hoặc lỗi không xác định
